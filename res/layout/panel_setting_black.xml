<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:id="@+id/panel_setting" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  >
    <include layout="@layout/reading_status_bar" /> 
    <LinearLayout 
        android:gravity="center_vertical" 
        android:id="@+id/linearLayout_reading_top_bar" 
        android:background="@drawable/repeat_black_bg" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/refresh_article" 
            android:padding="10.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="4.0dip" 
            android:layout_marginRight="10.0dip" 
            android:src="@drawable/iconblack_content" />
        <ImageView 
            android:id="@+id/info" 
            android:padding="10.0dip" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="4.0dip" 
            android:src="@drawable/iconblack_info" />
        <LinearLayout 
            android:layout_width="0.0dip" 
            android:layout_height="wrap_content" 
            android:layout_weight="1.0" />
        <Button 
            android:textSize="12.0dip" 
            android:textColor="#ff4d4b48" 
            android:id="@+id/salon" 
            android:background="@drawable/btnblack_gosalon" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="10.0dip" 
            android:text="@string/text_salon" 
            android:visibility="invisible"
            />
    </LinearLayout>
    
    <LinearLayout
         android:background="@drawable/shadow_top" 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" />
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0">
        <TextView 
            android:textSize="20.0dip" 
            android:textColor="#ffdddddd" 
            android:id="@+id/overlay" 
            android:background="@drawable/overlay_tip_bg" 
            android:padding="10.0dip" 
            android:visibility="invisible" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerInParent="true" />
        <RelativeLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_alignParentBottom="true">
            <TextView 
                android:textSize="18.0dip" 
                android:textColor="#ffffffff" 
                android:gravity="center" 
                android:id="@+id/seekbar_tip" 
                android:background="@drawable/seekbar_tip" 
                android:visibility="invisible" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout 
        android:background="@drawable/shadow_bottom" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" />
    <LinearLayout 
        android:orientation="vertical" 
        android:id="@+id/linearLayout_reading_bottom_bar" 
        android:background="@drawable/repeat_black_bg" 
        android:padding="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <LinearLayout 
            android:gravity="center_vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginBottom="20.0dip">
            <ImageView 
                android:id="@+id/seekbar_leftedge" 
                android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/seekbar_black_leftedge" />
            <SeekBar 
                android:id="@+id/seekbar_white" 
                android:paddingLeft="0.0dip" 
                android:paddingRight="0.0dip" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:maxHeight="12.0dip" 
                android:progressDrawable="@drawable/seekbar_white_img" 
                android:minHeight="12.0dip" 
                android:thumb="@drawable/seekbar_white_slider_bg" 
                android:thumbOffset="2.0dip" 
                android:visibility="gone" 
                android:layout_weight="1.0" />
            <SeekBar 
                android:id="@+id/seekbar_black" 
                android:paddingLeft="0.0dip" 
                android:paddingRight="0.0dip" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:maxHeight="12.0dip" 
                android:progressDrawable="@drawable/seekbar_black_img" 
                android:minHeight="12.0dip" 
                android:thumb="@drawable/seekbar_black_slider_bg" 
                android:thumbOffset="2.0dip" 
                android:layout_weight="1.0" />
            <ImageView 
                android:id="@+id/seekbar_rightedge" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:src="@drawable/seekbar_black_rightedge" />
            <TextView 
                android:textSize="13.0dip" 
                android:id="@+id/progress" 
                android:layout_width="38.0dip" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="6.0dip" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <Button 
                android:id="@+id/light_minus" 
                android:background="@drawable/btnblack_bright_down_bg" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
            <Button 
                android:id="@+id/light_plus" 
                android:background="@drawable/btnblack_bright_up_bg" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
            <LinearLayout 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0" />
            <Button 
                android:id="@+id/size_minus" 
                android:background="@drawable/btnblack_textsize_down_bg" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
            <Button 
                android:id="@+id/size_plus" 
                android:background="@drawable/btnblack_textsize_up_bg" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" />
            <LinearLayout 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_weight="1.0" />
            <Button 
                android:id="@+id/colortheme" 
                android:background="@drawable/btnwhite_night_bg"
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
